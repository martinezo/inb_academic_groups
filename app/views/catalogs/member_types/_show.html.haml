- es = 'activerecord.attributes.catalogs/pub_type'
%table.table
  %tbody
    %tr
      %td.th
        = t("#{es}.name_es")
      %td.tc
        = @resource.name_es
    %tr
      %td.th
        = t("#{es}.name_en")
      %td.tc
        = @resource.name_en
%br
%h6.ml-5= t("titles.attributes")
%hr
%table.table
  %tbody
    - @member_attrs.each do |attr|
      %tr
        -if @resource.attrs_include? attr
          %td.th
            %i.far.fa-check-square
          %td.tc
            = t("activerecord.attributes.group_member.#{attr}")
        -else
          %td.th
            %i.far.fa-square
          %td.tc
            = t("activerecord.attributes.group_member.#{attr}")

.modal-footer
  = button_tag "<span class='fas fa-times'></span> #{t('commands.close')}".html_safe, data: { dismiss: "modal", type: 'button'}, class: 'button btn btn-secondary'
  -#%button.btn{:type => "button"} #{t('commands.edit')}
  = link_to_fa_button({url: eval("edit_#{hns}_path(@resource)"), icon: 'fa-pencil-alt', title: t('commands.edit'), text: t('commands.edit'), data: {dismiss: 'modal', toggle: 'modal', target: '#new-update-dialog'}, html_class: 'btn-primary'})
/button btn mr-sm-2