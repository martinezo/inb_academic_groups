    .modal-header
      %h5.modal-title= title
      %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
        %span{"aria-hidden" => "true"} Ã—
    .modal-body
      .alert.alert-danger
        = t('notices.delete_this_record?')
